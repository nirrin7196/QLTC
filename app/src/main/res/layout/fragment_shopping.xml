<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#ffcc99"
              android:orientation="vertical">
    <TextView
        android:layout_width="fill_parent"
        android:background="#33cc33"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/list_shopping"
        android:textStyle="italic"
        android:textSize="20dp"
        android:textAlignment="center"
        android:gravity="center"
        android:id="@+id/tvfrShoppingTitle"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="italic"
            android:text="@string/name"
            android:gravity="center"
            android:id="@+id/tvfrShoppingName"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:id="@+id/edtfrShoppingName"
            android:textStyle="italic"
            android:gravity="center"
            android:textAlignment="center"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/imbtnfrShoppingAdd"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="italic"
            android:text="@string/price"
            android:gravity="center"
            android:id="@+id/tvfrShoppingPrice"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:id="@+id/edtfrShoppingPrice"
            android:inputType="number"
            android:textStyle="italic"
            android:gravity="center"
            android:textAlignment="center"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/imbtnfrShoppingDel"/>
    </LinearLayout>
    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/lvfrShopping">
    </ListView>
</LinearLayout>
